<h1>My tasks</h1>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li class="my-1">
      <% if task.completed %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %> |
      <%= link_to delete_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create a new task', new_task_path %>
